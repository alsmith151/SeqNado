{% macro render_kv(key, value, indent=0) -%}
{%- set space = '  ' * indent -%}
{%- if value is mapping -%}
{{ space }}{{ key }}:
{%- for subkey, subvalue in value.items() %}
{{ render_kv(subkey, subvalue, indent + 1) }}
{%- endfor %}
{%- elif value is iterable and value is not string -%}
{{ space }}{{ key }}:
{%- for item in value %}
{{ space }}  - {{ item }}
{%- endfor -%}
{%- else -%}
{{ space }}{{ key }}: "{{ value }}"
{%- endif -%}
{% endmacro %}
